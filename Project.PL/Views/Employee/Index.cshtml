@model IEnumerable<EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>
<br />
<br />

<a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create New Employee</a>
<br />
<div class="row justify-content-center align-content-center">
    <form class="row col-8 offset-1">
        <div class="col-8">
             <input type="text" class="form-control" name="SearchValue" placeholder="Search By Name"/>
        </div>
        <div class="col-4">
            <input type="submit" value="Search" class="btn-success" />

        </div>

    </form>

</div>
<br />

@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(d=>d.Name)</th>
                <th>@Html.DisplayNameFor(d=>d.Age)</th>
                <th>@Html.DisplayNameFor(d=>d.Salary)</th>
                <th>@Html.DisplayNameFor(d=>d.Image)</th>
                <th>@Html.DisplayNameFor(d=>d.Department)</th>
                <th>@Html.DisplayNameFor(d=>d.Address)</th>
                <th>@Html.DisplayNameFor(d=>d.Email)</th>
                <th>@Html.DisplayNameFor(d=>d.Phone)</th>
                <th>@Html.DisplayNameFor(d=>d.HireDate)</th>
                
                <th>@Html.DisplayNameFor(d=>d.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Name</td>
                    <td>@employee.Age</td>
                    <td>@Html.DisplayFor(E=>employee.Salary)</td>
                    <td>
                        <img src="~/files/Images/@employee.ImageName" class="img-fluid rounded" width="30" hight="30" />
                    </td>
                    <td>@Html.DisplayFor(E=>employee.Department)</td>
                    <td>@employee.Address</td>
                    <td>@Html.DisplayFor(E=>employee.Email)</td>
                    <td>@employee.Phone</td>
                    <td>@employee.HireDate</td>
                    <td>
                        @if(employee.IsActive == true)
                        {
                            <i class="fa-solid fa-circle " style="color:green"></i>
                        }
                        else
                        {
                            <i class="fa-solid fa-circle " style="color:red"></i>
                        }


                    </td>
                    <partial name="_ButtonsPartialView" model="employee.Id.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There Is No Employees</h3>
    </div>
}

